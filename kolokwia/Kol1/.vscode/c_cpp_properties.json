{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**", // Ścieżka do plików w bieżącym projekcie
                "/usr/include", // Standardowe nagłówki systemowe
                "/usr/include/x86_64-linux-gnu", // Nagłówki specyficzne dla architektury
                "/usr/local/include" // Nagłówki lokalnie zainstalowanych bibliotek
            ],
            "defines": ["_POSIX_C_SOURCE=199309L"],
            "compilerPath": "/usr/bin/gcc", // Ścieżka do kompilatora GCC
            "cStandard": "gnu11", // Standard języka C
            "cppStandard": "c++17", // Standard języka C++ (jeśli używasz C++)
            "intelliSenseMode": "linux-gcc-x64" // Tryb IntelliSense dla GCC na Linuxie
        }
    ],
    "version": 4
}